<script>
    function onPlayerReady(event) {
        event.target.playVideo();
    }

    var button_pres = document.querySelector('.play-button');
    var overlay = document.querySelector('div[data-player-name=player1]');

    function loadPlayer(overlay) {
        var stub = overlay.querySelector('.stub');
        var player = document.getElementById(overlay.getAttribute('data-player-name'));
        var link = player.getAttribute('data-youtube');
        overlay.classList.add('play');

        stub.style.display = 'none';

        player = new YT.Player(player, {
            height: '100%',
            width: 'auto',
            videoId: link,
            playerVars: {
                loop: 1,
                playlist: link,
            },
            events: {
                'onReady': onPlayerReady
            }
        });
    }

    function playVideo(overlay) {
        loadPlayer(overlay)
    }

    button_pres.addEventListener('click', function () {
        playVideo(overlay);
    });
</script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        $(function () {
            $("body").on('click', '[href*="#"]', function (e) {
                var paddingTop = 40;
                $('html,body').stop().animate({scrollTop: ($(this.hash).offset().top)-paddingTop},1000);
                e.preventDefault();
            });
        });

        var dateNow = function () {
            var date = new Date();
            document.querySelector('.year').textContent = '' + date.getFullYear() + '';
        };
        dateNow();
    });
</script>
<script>
    var animation = document.querySelector(".change-easier__animation");

    document.addEventListener('scroll', function () {
        if (window.pageYOffset > 2000) {
            animation.classList.add('active');
        }
    });

    document.addEventListener('wheel', function () {
        if (window.pageYOffset > 2000) {
            animation.classList.add('active');
        }
    });
</script>
